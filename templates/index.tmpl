    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .top {
            display: flex;
            z-index: 10; /* 设置较高的堆叠顺序值 */
            position: fixed;
            width: 90%;
            justify-content: space-between;
            align-items: center;
            height: 40px;
        }

        .top h1 {
            margin-left: 20px;
        }

        .top a {
            margin: 20px;
        }

        .container {
            display: flex;
            height: calc(100%); /* 减去头部的高度 */
            overflow: scroll; /* 或者 overflow: scroll; */
        }

        .container-right {
            flex: 1;
            min-width: 90%;
            height: 100%;
            background-color: white;
            display: inline;
            overflow: scroll; /* 或者 overflow: scroll; */
        }

        #jsmind_container {
